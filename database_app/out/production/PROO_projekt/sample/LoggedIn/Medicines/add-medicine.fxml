<AnchorPane prefHeight="601.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.LoggedIn.Medicines.AddMedicineController">
   <children>
      <VBox layoutX="247.0" layoutY="132.0" spacing="35.0">
         <children>
            <TextField fx:id="nameTextField" prefHeight="40.0" prefWidth="400.0">
               <font>
                  <Font size="22.0" />
               </font>
            </TextField>
            <TextField fx:id="doseTextField" prefHeight="40.0" prefWidth="400.0">
               <font>
                  <Font size="22.0" />
               </font>
            </TextField>
            <TextField fx:id="purposeTextField" prefHeight="40.0" prefWidth="400.0">
               <font>
                  <Font size="22.0" />
               </font>
            </TextField>
            <DatePicker fx:id="datePicker" prefHeight="40.0" prefWidth="400.0" />
         </children>
      </VBox>
      <VBox layoutX="62.0" layoutY="136.0" spacing="50.0">
         <children>
            <Label text="Name">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <Label text="Dose [mg]">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <Label text="Purpose">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
            <Label text="Duration time">
               <font>
                  <Font size="22.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <HBox layoutX="431.0" layoutY="444.0" spacing="50.0">
         <children>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#addButtonOnAction" text="Add" textFill="WHITE">
               <font>
                  <Font size="22.0" />
               </font>
            </Button>
            <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelButtonOnAction" text="Cancel" textFill="WHITE">
               <font>
                  <Font size="22.0" />
               </font>
            </Button>
         </children>
      </HBox>
      <Label fx:id="errorLabel" layoutX="62.0" layoutY="515.0" prefHeight="40.0" prefWidth="586.0" textFill="RED">
         <font>
            <Font size="18.0" />
         </font></Label>
   </children>
   <stylesheets>
      <URL value="@style.css" />
   </stylesheets>
</AnchorPane>
